<div class="lit-exports">
  <h1>Export Translations</h1>
  
  <div class="lit-export-description">
    <p>Select a language to export all active translations as a YAML file. Only non-deleted translations will be included.</p>
  </div>

  <div class="lit-export-form">
    <%= form_with url: lit.export_exports_path, method: :get, local: true, class: 'form-inline' do |form| %>
      <div class="form-group">
        <%= form.label :locale, "Language:", class: 'control-label' %>
        <%= form.select :locale, 
                        options_from_collection_for_select(@locales, :locale, :locale), 
                        { prompt: 'Select a language...' }, 
                        { class: 'form-control', required: true } %>
      </div>
      
      <div class="form-group">
        <%= form.submit "Export YAML", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="lit-export-info">
    <h3>Available Languages:</h3>
    <div class="lit-locales-list">
      <% @locales.each do |locale| %>
        <div class="lit-locale-item">
          <strong><%= locale.locale.upcase %></strong>
          <span class="lit-locale-stats">
            (<%= locale.all_localizations_count %> translations, 
            <%= locale.translated_percentage %>% translated)
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="lit-exports-actions">
    <%= link_to 'Back to Dashboard', lit.root_path, class: 'btn btn-default' %>
  </div>
</div>

<style>
.lit-exports {
  max-width: 800px;
  margin: 0 auto;
}

.lit-export-description {
  margin-bottom: 30px;
  padding: 15px;
  background-color: #f5f5f5;
  border-radius: 4px;
}

.lit-export-form {
  margin-bottom: 30px;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #fff;
}

.lit-export-form .form-group {
  margin-right: 15px;
  margin-bottom: 10px;
}

.lit-export-form .control-label {
  margin-right: 10px;
  font-weight: bold;
}

.lit-export-info {
  margin-bottom: 30px;
}

.lit-locales-list {
  margin-top: 15px;
}

.lit-locale-item {
  padding: 8px 0;
  border-bottom: 1px solid #eee;
}

.lit-locale-item:last-child {
  border-bottom: none;
}

.lit-locale-stats {
  color: #666;
  font-size: 0.9em;
  margin-left: 10px;
}

.lit-exports-actions {
  text-align: center;
  padding-top: 20px;
  border-top: 1px solid #eee;
}
</style>
