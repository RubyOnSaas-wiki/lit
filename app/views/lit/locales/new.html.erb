  border-radius: 4px;
  border-left: 4px solid #007bff;
}

.lit-create-locale-description .lit-note {
  margin-top: 10px;
  margin-bottom: 0;
  color: #666;
  font-size: 0.9em;
}

.lit-create-locale-form {
  margin-bottom: 30px;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #fff;
}

.lit-create-locale-form .help-block {
  margin-top: 5px;
  font-size: 0.9em;
  color: #666;
}

.lit-create-locale-info {
  margin-bottom: 30px;
}

.lit-create-locale-info h3 {
  margin-bottom: 15px;
